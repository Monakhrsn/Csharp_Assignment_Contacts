<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="MainApp_Avalonia.CustomMessageBox"
        Title="CustomMessageBox"
        Width="300" Height="150" WindowStartupLocation="CenterScreen">
    <StackPanel Margin="10" Spacing="10">
        <TextBlock x:Name="MessageTextBlock" Text="Message" TextWrapping="Wrap" />
        <Button Content="OK" HorizontalAlignment="Center" Click="OnOkButtonClick"/>
    </StackPanel>
</Window>
